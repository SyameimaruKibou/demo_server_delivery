<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="extrace.ui.main.LoginTeleActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:background="@color/viewfinder_laser">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/tv_login"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkgray" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/Icon"
            android:layout_centerVertical="true"
            android:src="@drawable/tele"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:id="@+id/tele_code"
            android:textSize="15dp"
            android:hint="请输入11位电话号码"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_clear_tele"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:src="@drawable/clearn" />

        <TextView
            android:id="@+id/tv_get_mesg"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="获取验证码"
            android:textColor="@color/royalblue" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/Icon"
            android:layout_centerVertical="true"
            android:src="@drawable/telego"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:id="@+id/mod_nickname"
            android:textSize="15dp"
            android:hint="请输入收到的验证码"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="10"
            android:id="@+id/img_clear"
            android:layout_gravity="center_vertical"
            android:src="@drawable/clearn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                   "
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>


    <Button
        android:id="@+id/login_tv_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/btn_orange_selector"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="确  定"
        android:textColor="#ffffff"
        android:textSize="18sp" />


</LinearLayout>
