<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="extrace.ui.main.RegiMesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:background="@color/viewfinder_laser">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="用户信息填写"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        style="@style/Bar.White.Selectable"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Bar.White.Selectable"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户名"
            android:textColor="@color/black"
            android:textSize="19dp"/>

        <EditText
            android:layout_width="250dp"
            android:background="@null"
            android:layout_height="wrap_content"
            android:id="@+id/et_uname"
            android:paddingLeft="20dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="10"
            android:id="@+id/img_clear_uname"
            android:layout_gravity="center_vertical"
            android:src="@drawable/clearn"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        style="@style/Bar.White.Selectable"
        android:paddingLeft="15dp"
        android:text="@string/mod_uname"
        android:paddingBottom="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Bar.White.Selectable"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="19dp"/>

        <EditText
            android:layout_width="270dp"
            android:background="@null"
            android:layout_height="wrap_content"
            android:id="@+id/et_nickname"
            android:paddingLeft="20dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="10"
            android:id="@+id/img_clear_nickname"
            android:layout_gravity="center_vertical"
            android:src="@drawable/clearn"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Bar.White.Selectable"
        android:paddingLeft="15dp"
        android:text="@string/mod_nickname"
        android:paddingBottom="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Bar.White.Selectable"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:text="密码"/>

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="textPassword"
            android:id="@+id/et_pwd"
            android:paddingLeft="20dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="10"
            android:id="@+id/img_clear_pwd"
            android:layout_gravity="center_vertical"
            android:src="@drawable/clearn"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        style="@style/Bar.White.Selectable"
        android:paddingBottom="5dp"
        android:text="@string/mod_pswd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Bar.White.Selectable"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:text="再次确认密码"/>

        <EditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/et_repwd"
            android:inputType="textPassword"
            android:paddingLeft="20dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/img_clear_repwd"
            android:layout_gravity="center_vertical"
            android:src="@drawable/clearn"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/Bar.White.Selectable"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:text="电话号码"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="19dp"
            android:id="@+id/tv_tele"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/user_tv_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30sp"
        android:background="@color/viewfinder_laser"
        android:gravity="center"
        android:text="确  定"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>
