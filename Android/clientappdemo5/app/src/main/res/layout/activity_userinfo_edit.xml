<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <!--上部分-->
    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/viewfinder_laser">

        <ImageView
            android:paddingTop="10dp"
            android:id="@+id/arrow_left"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:textSize="17dp"/>

    </RelativeLayout>
    <!--顶部区域结束-->


    <!-- 垂直滚动区 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                style="@style/Bar.White.Selectable"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/user_id_tv"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="账号"/>

                <TextView
                    android:id="@+id/user_edit_tv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="txtview"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/user_id_tv"
                    android:background="@null"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                style="@style/Bar.White.Selectable"
                android:id="@+id/rl_uname"
                android:layout_marginTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/user_uname_tv"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="账户名"/>

                <TextView
                    android:id="@+id/user_edit_tv_uname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:text="txtview"
                    android:layout_toRightOf="@+id/user_uname_tv"
                    android:background="@null"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                style="@style/Bar.White.Selectable"
                android:id="@+id/rl_name">

                <TextView
                    android:id="@+id/user_name_tv"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="昵称"/>

                <TextView
                    android:id="@+id/user_edit_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:text="txtview"
                    android:layout_toRightOf="@+id/user_name_tv"
                    android:layout_toLeftOf="@+id/user_name__go"
                    android:background="@null"/>

                <ImageView
                    android:id="@+id/user_name__go"
                    style="@style/Icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                style="@style/Bar.White.Selectable"
                android:id="@+id/rl_pasword">

                <TextView
                    android:id="@+id/user_pswd_tv"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="修改密码"/>

                <TextView
                    android:id="@+id/user_edit_tv_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorFont"
                    android:gravity="right"
                    android:text=""
                    android:textSize="15sp"
                    android:layout_toLeftOf="@+id/user_password__go"
                    android:layout_toRightOf="@+id/user_pswd_tv"
                    android:background="@null"/>

                <ImageView
                    android:id="@+id/user_password__go"
                    style="@style/Icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:id="@+id/rl_telcode"
                style="@style/Bar.White.Selectable">

                <TextView
                    android:id="@+id/user_tele_tv"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="绑定手机号"/>

                <TextView
                    android:id="@+id/user_edit_tv_telphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorFont"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:text="txtview"
                    android:layout_toRightOf="@+id/user_tele_tv"
                    android:layout_toLeftOf="@+id/user_tele__go"
                    android:background="@null"/>

                <ImageView
                    android:id="@+id/user_tele__go"
                    style="@style/Icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/next" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/user_tv_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30sp"
        android:background="@color/viewfinder_laser"
        android:gravity="center"
        android:text="退 出"
        android:textColor="#ffffff"
        android:textSize="18sp" />


</LinearLayout>
