<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/click"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:layout_height="118dp">

        <TextView
            android:id="@+id/add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/add_tele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/add_name"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@id/add_name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/add_add"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_name"
            android:layout_alignStart="@+id/add_name"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxEms="17"
            android:singleLine="true"
            android:textSize="15sp" />

    </RelativeLayout>


    <View
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/img_edt"
        android:background="@color/colorBottom" />


    <ImageView
        android:id="@+id/img_edt"
        android:layout_width="37dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="1dp"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:clickable="true"
        app:srcCompat="@drawable/edit" />
</RelativeLayout>