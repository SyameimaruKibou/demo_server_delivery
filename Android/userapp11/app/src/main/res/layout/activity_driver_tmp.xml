<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewfinder_laser"
    tools:context=".Driver_tmp_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/viewfinder_laser"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="卓越快递"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位地图"
            android:gravity="right"
            android:layout_weight="1"
            android:id="@+id/driver_map_tv"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:textColor="@color/white"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/viewfinder_laser"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:src="@drawable/user"
                android:id="@+id/img_my_driver"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:text="    我的资料"
                android:textColor="@color/white" />
        </RelativeLayout>


    </LinearLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corners_bg_up"
        android:gravity="center">



        <Button
            android:id="@+id/driver_parcel_receive_btn"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginRight="30sp"
            android:background="@drawable/corners_btn"
            android:drawableTop="@drawable/preceive"
            android:elevation="3dp"
            android:gravity="center"
            android:text="接收包裹"
            android:textSize="20sp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:id="@+id/driver_parcel_delive_btn"
            android:layout_toRightOf="@+id/driver_parcel_receive_btn"
            android:background="@drawable/corners_btn"
            android:drawableTop="@drawable/ptransport"
            android:elevation="2dp"
            android:gravity="center"
            android:text="交付包裹"
            android:textSize="20sp" />

    </RelativeLayout>


</LinearLayout>